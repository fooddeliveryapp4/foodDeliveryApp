package com.nv.foodapp.util;

import org.springframework.stereotype.Component;

import com.nv.foodapp.dto.RestaurantDTO;
import com.nv.foodapp.dto.RestaurantDefaultDTO;
import com.nv.foodapp.entity.Restaurant;

@Component
public class RestaurantDTOConvertor {
	
	public RestaurantDefaultDTO getRestaurantDTO(Restaurant r)
	{
		RestaurantDefaultDTO obj= new RestaurantDefaultDTO(r.getRestaurantId(),r.getRestaurantName(),r.getContactNumber());
		
	    return obj;
	}
	
	

}
