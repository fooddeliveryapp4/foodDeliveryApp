package com.nv.foodapp.entity;
import java.util.List; 
import javax.persistence.CascadeType;
import javax.persistence.ElementCollection;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.OneToOne; 
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor; @Entity
@Data
@AllArgsConstructor
@NoArgsConstructor
public class Bill {    
	@Id
    @GeneratedValue(strategy = GenerationType.AUTO)
    private int billId;
    private int customerId;
    private int restaurantId;
    private String restName;
    private int itemCount;
    private int grossBillAmount;
    private int gstAmount;

    @ElementCollection
    List<String>items;
    @OneToOne(cascade = CascadeType.ALL)
    private Restaurant restaurant;

    public Bill(int billId,int customerId,int restaurantId, String restName, int itemCount,int grossBillAmount,int gstAmount) {
        super();
        this.billId = billId;
        this.customerId= customerId;
        this.restaurantId= restaurantId;
        this.restName = restName;
        this.itemCount = itemCount;
        this.grossBillAmount = grossBillAmount;
        this.gstAmount = gstAmount;
    }
} 




